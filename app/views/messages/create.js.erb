<% publish_to @path do %>
  var sender_id = "<%= @message.user.id %>";
  var receiver_id = $(".user_id").data().userId;
  var chatBox = $(".chatboxcontent");
  chatBox.append("<%= j render @message %>");
  if (sender_id != receiver_id) {
    chatBox.children().last().removeClass("self").addClass("other");
  }
<% end %>
